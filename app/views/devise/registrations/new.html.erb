<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :name %><br />
  Your username should consist of your ENTIRE first name<br />
  followed by the INITIAL of your last name.<br />
  Use letters only (no spaces, hypens or underscores).<br />
  For example, Mary Smith should have a username of MaryS.<br />
  <%= f.text_field :name, :autofocus => true %></div>

  <br />

  <div><%= f.label :email %><br />
  <%= f.email_field :email %></div>

  <br />

  <div><%= f.label :password %><br />
  <%= f.password_field :password %></div>

  <br />

  <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></div>

  <br />

  <div><%= f.submit "Sign up" %></div>
<% end %>

<%= render "devise/shared/links" %>
